extends auth-layout

block content
  link(rel="stylesheet" href="/css/login.css")
  link(rel="stylesheet" href="/css/auth.css")

  .login-container
    h2.login-h2 Login
    form(class='login-form' hx-post='/api/auth/login', hx-target='this', hx-swap='none')
      .login-form-group
        input(class='login-input', type='email', name='email', required, placeholder='Email')
      .login-form-group
        .password-group 
          input(class='login-input password-input', type='password', id='password', name='password', required, autocomplete='current-password', placeholder='Password')
          img(class='show-password-icon' src='/images/icons/show-password-icon.svg' alt='Show Password')
      button(type='submit' class='login-button') Log In

  script(type="module", src="/js/auth.js")
